<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="16dp">

    <!-- Background chạy loop -->
    <ImageView
        android:id="@+id/bg1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background"/>

    <ImageView
        android:id="@+id/bg2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background"/>

    <!-- Vạch đích (sẽ được di chuyển từ ngoài màn hình vào và dừng tại target) -->
    <View
        android:id="@+id/finishLine"
        android:layout_width="32dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@drawable/finish_line"
        android:visibility="gone" />

    <!-- Foreground: Nút + đường đua -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <!-- Panel đặt cược: hiển thị số dư & kết quả (đặt tiền trực tiếp tại từng lane) -->
        <LinearLayout
            android:id="@+id/betPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="#80FFFFFF"
            android:elevation="2dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/tvBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Balance: 1000"
                android:textStyle="bold"
                android:textSize="16sp" />

            <!-- Bỏ chọn vịt và ô nhập chung; mỗi lane sẽ có ô nhập riêng -->

            <TextView
                android:id="@+id/tvResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kết quả sẽ hiển thị ở đây"
                android:textStyle="italic"
                android:layout_marginTop="6dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">
            <Button
                android:id="@+id/btnStart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Bắt đầu đua" />
            <Button
                android:id="@+id/btnCancelBet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hủy cược"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- lane 1 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginBottom="12dp">

            <SeekBar
                android:id="@+id/seekBar1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:progressDrawable="@drawable/blur_seekbar"
                android:thumb="@android:color/transparent"
                android:max="100"/>

            <ImageView
                android:id="@+id/animal1"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/animal1_idle"/>

            <Button
                android:id="@+id/btnBet1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|start"
                android:layout_margin="8dp"
                android:text="Đặt"/>
        </FrameLayout>

        <!-- lane 2 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginBottom="12dp">

            <SeekBar
                android:id="@+id/seekBar2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:progressDrawable="@drawable/blur_seekbar"
                android:thumb="@android:color/transparent"
                android:max="100"/>

            <ImageView
                android:id="@+id/animal2"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/animal2_idle"/>

            <Button
                android:id="@+id/btnBet2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|start"
                android:layout_margin="8dp"
                android:text="Đặt"/>
        </FrameLayout>

        <!-- lane 3 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginBottom="12dp">

            <SeekBar
                android:id="@+id/seekBar3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:progressDrawable="@drawable/blur_seekbar"
                android:thumb="@android:color/transparent"
                android:max="100"/>

            <ImageView
                android:id="@+id/animal3"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/animal3_idle"/>

            <Button
                android:id="@+id/btnBet3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|start"
                android:layout_margin="8dp"
                android:text="Đặt"/>
        </FrameLayout>

        <!-- lane 4 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginBottom="12dp">

            <SeekBar
                android:id="@+id/seekBar4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:progressDrawable="@drawable/blur_seekbar"
                android:thumb="@android:color/transparent"
                android:max="100"/>

            <ImageView
                android:id="@+id/animal4"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/animal4_idle"/>

            <Button
                android:id="@+id/btnBet4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|start"
                android:layout_margin="8dp"
                android:text="Đặt"/>
        </FrameLayout>

    </LinearLayout>
</FrameLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/grassContainer"
        android:layout_width="0dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/grass1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/grass" />

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/grass2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/grass" />
    </FrameLayout>

    <!-- Panel đặt cược -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/betPanel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="#80FFFFFF"
        android:elevation="2dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/profileContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical"
            android:paddingRight="30dp">

            <TextView
                android:id="@+id/tvUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nick name: User1"
                android:textStyle="bold"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số lượng xu: 1000"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:textSize="14sp" />

                <ImageButton
                    android:id="@+id/btnDeposit"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/ic_deposit"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Deposit"
                    android:scaleType="centerCrop" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btnStart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Bắt đầu đua"
            app:layout_constraintTop_toTopOf="@id/profileContainer"
            app:layout_constraintBottom_toBottomOf="@id/profileContainer"
            app:layout_constraintStart_toEndOf="@id/profileContainer"
            app:layout_constraintHorizontal_weight="1" />

        <ImageButton
            android:id="@+id/btnLogOut"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_logout"
            android:layout_marginEnd="12dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="LogOut"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="Đăng xuất"
            app:layout_constraintTop_toBottomOf="@+id/btnLogOut"
            app:layout_constraintStart_toStartOf="@+id/btnLogOut"
            app:layout_constraintEnd_toEndOf="@+id/btnLogOut"/>

        <ImageButton
            android:id="@+id/btnTutorial"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_book"
            android:layout_marginEnd="30dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Tutorial"
            app:layout_constraintTop_toTopOf="@+id/btnLogOut"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toStartOf="@+id/btnLogOut" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="Hướng dẫn"
            app:layout_constraintTop_toBottomOf="@+id/btnTutorial"
            app:layout_constraintStart_toStartOf="@+id/btnTutorial"
            app:layout_constraintEnd_toEndOf="@+id/btnTutorial"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <FrameLayout
        android:id="@+id/waterContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/grassContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="DuplicateIds">

        <!-- Background water -->
        <ImageView
            android:id="@+id/waterBg1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/water" />

        <ImageView
            android:id="@+id/waterBg2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/water" />

        <View
            android:id="@+id/finishLine"
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:background="@drawable/finish_line"
            android:visibility="gone"
            android:layout_gravity="end" />

        <!-- 4 lane chia đều -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Lane 1 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <SeekBar
                    android:id="@+id/seekBar1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:max="100"
                    android:paddingBottom="20dp"
                    android:layout_marginLeft="120dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:progressDrawable="@drawable/blur_seekbar" />

                <Button
                    android:id="@+id/btnBet1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|start"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginLeft="20dp"
                    android:text="Đặt" />

                <TextView
                    android:id="@+id/tvBet1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|start"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="#66000000"
                    android:textColor="#FFFFFF"
                    android:paddingVertical="12dp"
                    android:layout_marginLeft="40dp"
                    android:paddingHorizontal="20sp"
                    android:text="0"
                    android:visibility="gone" />

                <ImageButton
                    android:id="@+id/btnCancelBet1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_cancel"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Cancel Bet 1"
                    android:scaleType="centerCrop"
                    android:visibility="gone"
                    app:layout_constraintStart_toEndOf="@id/tvBet1"
                    app:layout_constraintTop_toTopOf="@id/tvBet1"
                    app:layout_constraintBottom_toBottomOf="@id/tvBet1"
                    android:layout_marginStart="-6dp"
                    android:layout_marginBottom="30dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Lane 2 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <SeekBar
                    android:id="@+id/seekBar2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:max="100"
                    android:paddingBottom="20dp"
                    android:layout_marginLeft="120dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:progressDrawable="@drawable/blur_seekbar" />

                <Button
                    android:id="@+id/btnBet2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|start"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginLeft="20dp"
                    android:text="Đặt" />

                <TextView
                    android:id="@+id/tvBet2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|start"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="#66000000"
                    android:textColor="#FFFFFF"
                    android:paddingVertical="12dp"
                    android:layout_marginLeft="40dp"
                    android:paddingHorizontal="20sp"
                    android:text="0"
                    android:visibility="gone" />

                <ImageButton
                    android:id="@+id/btnCancelBet2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="-6dp"
                    android:layout_marginBottom="30dp"
                    android:src="@drawable/ic_cancel"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Cancel Bet 2"
                    android:scaleType="centerCrop"
                    android:visibility="gone"
                    app:layout_constraintStart_toEndOf="@id/tvBet2"
                    app:layout_constraintTop_toTopOf="@id/tvBet2"
                    app:layout_constraintBottom_toBottomOf="@id/tvBet2" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Lane 3 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <SeekBar
                    android:id="@+id/seekBar3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:max="100"
                    android:paddingBottom="20dp"
                    android:layout_marginLeft="120dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:progressDrawable="@drawable/blur_seekbar" />

                <Button
                    android:id="@+id/btnBet3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|start"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginLeft="20dp"
                    android:text="Đặt" />

                <TextView
                    android:id="@+id/tvBet3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|start"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="#66000000"
                    android:textColor="#FFFFFF"
                    android:paddingVertical="12dp"
                    android:layout_marginLeft="40dp"
                    android:paddingHorizontal="20sp"
                    android:text="0"
                    android:visibility="gone" />

                <ImageButton
                    android:id="@+id/btnCancelBet3"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_cancel"
                    android:scaleType="centerCrop"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Cancel Bet 3"
                    android:visibility="gone"
                    app:layout_constraintStart_toEndOf="@id/tvBet3"
                    app:layout_constraintTop_toTopOf="@id/tvBet3"
                    app:layout_constraintBottom_toBottomOf="@id/tvBet3"
                    android:layout_marginStart="-6dp"
                    android:layout_marginBottom="30dp" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Lane 4 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <SeekBar
                    android:id="@+id/seekBar4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:max="100"
                    android:paddingBottom="20dp"
                    android:layout_marginLeft="120dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:progressDrawable="@drawable/blur_seekbar" />

                <Button
                    android:id="@+id/btnBet4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|start"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginLeft="20dp"
                    android:text="Đặt" />

                <TextView
                    android:id="@+id/tvBet4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|start"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="#66000000"
                    android:textColor="#FFFFFF"
                    android:paddingVertical="12dp"
                    android:layout_marginLeft="40dp"
                    android:paddingHorizontal="20sp"
                    android:text="0"
                    android:visibility="gone" />

                <ImageButton
                    android:id="@+id/btnCancelBet4"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_cancel"
                    android:scaleType="centerCrop"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Cancel Bet 4"
                    android:visibility="gone"
                    app:layout_constraintStart_toEndOf="@id/tvBet4"
                    app:layout_constraintTop_toTopOf="@id/tvBet4"
                    app:layout_constraintBottom_toBottomOf="@id/tvBet4"
                    android:layout_marginStart="-6dp"
                    android:layout_marginBottom="30dp" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="16dp">

    <!-- Background chạy loop -->
    <ImageView
        android:id="@+id/bg1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background"/>

    <ImageView
        android:id="@+id/bg2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background"/>

    <!-- Vạch đích (sẽ được di chuyển từ ngoài màn hình vào và dừng tại target) -->
    <View
        android:id="@+id/finishLine"
        android:layout_width="32dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@drawable/finish_line"
        android:visibility="gone" />

    <!-- Foreground: Nút + đường đua -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <!-- Panel đặt cược: chọn vịt, nhập tiền cược, hiển thị số dư & kết quả -->
        <LinearLayout
            android:id="@+id/betPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="#80FFFFFF"
            android:elevation="2dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/tvBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Balance: 1000"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chọn vịt muốn cược:"/>

            <RadioGroup
                android:id="@+id/rgDucks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rbDuck1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vịt 1"
                    android:checked="true"/>
                <RadioButton
                    android:id="@+id/rbDuck2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vịt 2"/>
                <RadioButton
                    android:id="@+id/rbDuck3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vịt 3"/>
                <RadioButton
                    android:id="@+id/rbDuck4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vịt 4"/>
            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tiền cược:"/>

                <EditText
                    android:id="@+id/etBetAmount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:hint="Nhập số tiền"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kết quả sẽ hiển thị ở đây"
                android:textStyle="italic"
                android:layout_marginTop="6dp"/>

        </LinearLayout>

        <Button
            android:id="@+id/btnStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bắt đầu đua" />

        <!-- lane 1 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginBottom="12dp">

            <SeekBar
                android:id="@+id/seekBar1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:progressDrawable="@drawable/blur_seekbar"
                android:thumb="@android:color/transparent"
                android:max="100"/>

            <ImageView
                android:id="@+id/animal1"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/animal1_idle"/>
        </FrameLayout>

        <!-- lane 2 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginBottom="12dp">

            <SeekBar
                android:id="@+id/seekBar2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:progressDrawable="@drawable/blur_seekbar"
                android:thumb="@android:color/transparent"
                android:max="100"/>

            <ImageView
                android:id="@+id/animal2"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/animal2_idle"/>
        </FrameLayout>

        <!-- lane 3 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginBottom="12dp">

            <SeekBar
                android:id="@+id/seekBar3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:progressDrawable="@drawable/blur_seekbar"
                android:thumb="@android:color/transparent"
                android:max="100"/>

            <ImageView
                android:id="@+id/animal3"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/animal3_idle"/>
        </FrameLayout>

        <!-- lane 4 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginBottom="12dp">

            <SeekBar
                android:id="@+id/seekBar4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:progressDrawable="@drawable/blur_seekbar"
                android:thumb="@android:color/transparent"
                android:max="100"/>

            <ImageView
                android:id="@+id/animal4"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/animal4_idle"/>
        </FrameLayout>

    </LinearLayout>
</FrameLayout>
